<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image dengan Overlay -->
    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/pengetahuan_kuantitatif" />

    <!-- Dark Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000" />

    <!-- Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/tvHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pengetahuan\nKuantitatif"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppinsbold"
                    android:lineSpacingExtra="2dp" />

                <!-- Timer Badge -->
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_clock"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ic_clock"
                        app:tint="#000000" />

                    <TextView
                        android:id="@+id/tvTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 Menit"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppinsbold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Question Text -->
            <TextView
                android:id="@+id/tvSoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:fontFamily="@font/poppinsmedium"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />

            <!-- Radio Group for Options -->
            <RadioGroup
                android:id="@+id/rgPilihan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <RadioButton
                    android:id="@+id/rbPilihan1"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/option_bg"
                    android:button="@null"
                    android:drawableEnd="@drawable/ic_radio_unchecked"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="Rp5.000"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rbPilihan2"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/option_bg"
                    android:button="@null"
                    android:drawableEnd="@drawable/ic_radio_unchecked"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="Rp6.000"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rbPilihan3"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/option_bg"
                    android:button="@null"
                    android:drawableEnd="@drawable/ic_radio_unchecked"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="Rp7.000"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rbPilihan4"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/option_bg"
                    android:button="@null"
                    android:drawableEnd="@drawable/ic_radio_unchecked"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="Rp8.000"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rbPilihan5"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/option_bg"
                    android:button="@null"
                    android:drawableEnd="@drawable/ic_radio_unchecked"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="Rp9.000"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />
            </RadioGroup>

            <!-- Spacer untuk push buttons ke bawah -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Tanya Snopati Button -->
            <Button
                android:id="@+id/btnTanyaSnopati"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/btn_senopati_bg"
                android:fontFamily="@font/poppinsbold"
                android:text="Tanya Senopati"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Bottom Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnKembali"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_kembali"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Kembali"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnSelesai"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_yellow_rounded"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Selesai"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>