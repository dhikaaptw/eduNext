<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="22dp"
    app:cardElevation="0dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengetahuan Kuantitatif"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/latihan_tag"
                    android:text="300+ Latihan Soal"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tryout_tag"
                    android:text="400+ Tryout"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lanjut"
                android:backgroundTint="#F6FF93"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="14dp"
                android:paddingHorizontal="26dp"
                android:paddingVertical="4dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/pengetahuan_kuantitatif"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:background="@drawable/course_card_bg"
            android:layout_marginStart="12dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
