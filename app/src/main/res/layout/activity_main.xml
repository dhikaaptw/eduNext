<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E0E0E"
    android:padding="16dp"
    android:scrollbars="none"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fontFamily="@font/poppinsmedium">

        <!-- TOP PROFILE BAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/profile_pic"
                android:layout_marginEnd="12dp"
                android:background="@drawable/profile_bg"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dhika Putra"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppinsmedium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SMA Al - Izhar"
                    android:textColor="#CCCCCC"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppinsmedium" />
            </LinearLayout>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_heart"
                android:tint="#C5FF3F"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_bell"
                android:tint="#C5FF3F" />
        </LinearLayout>

        <!-- SEARCH BAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/search_bg"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                android:tint="#808080"
                android:layout_marginEnd="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search for a course..."
                android:textColor="#808080"
                android:textSize="14sp"
                android:fontFamily="@font/poppinsmedium" />
        </LinearLayout>

        <!-- DISKON CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_discount"
            android:padding="20dp"
            android:layout_marginBottom="28dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajak temanmu,\nDapatkan diskon 30%"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppinsbold" />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Mulai"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#000000"
                android:paddingVertical="6dp"
                android:paddingHorizontal="16dp"
                android:fontFamily="@font/poppinsmedium" />
        </LinearLayout>

        <!-- ENROLLED COURSES HEADER -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enrolled Courses"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppinsmedium" />

        <!-- TABS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Progress(3)"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/poppinslight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paused"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/poppinslight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="@font/poppinslight" />
        </LinearLayout>

        <!-- COURSE LIST -->
        <!-- COURSE LIST -->
        <LinearLayout
            android:id="@+id/courseListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CARD 1 -->
            <include
                android:id="@+id/courseCard1"
                layout="@layout/item_course_card" />

            <!-- CARD 2 -->
            <include
                android:id="@+id/courseCard2"
                layout="@layout/item_course_card" />

            <!-- CARD 3 -->
            <include
                android:id="@+id/courseCard3"
                layout="@layout/item_course_card" />

            <!-- CARD 4 -->
            <include
                android:id="@+id/courseCard4"
                layout="@layout/item_course_card" />

            <!-- CARD 5 -->
            <include
                android:id="@+id/courseCard5"
                layout="@layout/item_course_card" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
